{{ attach_library('pieronanni/homepage') }}

{# Main #}
{% block main %}
  <div role="main" class="main-container container-fluid js-quickedit-main-content">

    {# Highlighted #}
    {% if page.highlighted %}
      {% block highlighted %}
        <div class="highlighted">{{ page.highlighted }}</div>
      {% endblock %}
    {% endif %}

    <section{{ content_attributes.addClass('boxes') }}>

      <div class="row">
        <div class="col box{% if page.box_1_1 %} full{% endif %}">{{ page.box_1_1 }}</div>
        <div class="col box{% if page.box_1_2 %} full{% endif %}">{{ page.box_1_2 }}</div>
        <div class="col box{% if page.box_1_3 %} full{% endif %}">{{ page.box_1_3 }}</div>
        <div class="col box{% if page.box_1_4 %} full{% endif %}">{{ page.box_1_4 }}</div>
      </div>
				
      <div class="row">
        <div class="col box{% if page.box_2_1 %} full{% endif %}">{{ page.box_2_1 }}</div>
        <div class="col box{% if page.box_2_2 %} full{% endif %}">{{ page.box_2_2 }}</div>
        <div class="col box{% if page.box_2_3 %} full{% endif %}">{{ page.box_2_3 }}</div>
        <div class="col box{% if page.box_2_4 %} full{% endif %}">{{ page.box_2_4 }}</div>
      </div>
				
      <div class="row">
        <div class="col box{% if page.box_3_1 %} full{% endif %}">{{ page.box_3_1 }}</div>
        <div class="col box{% if page.box_3_2 %} full{% endif %}">{{ page.box_3_2 }}</div>
        <div class="col box{% if page.box_3_3 %} full{% endif %}">{{ page.box_3_3 }}</div>
        <div class="col box{% if page.box_3_4 %} full{% endif %}">{{ page.box_3_4 }}</div>
      </div>
				
      <div class="row">
        <div class="col box{% if page.box_4_1 %} full{% endif %}">{{ page.box_4_1 }}</div>
        <div class="col box{% if page.box_4_2 %} full{% endif %}">{{ page.box_4_2 }}</div>
        <div class="col box{% if page.box_4_3 %} full{% endif %}">{{ page.box_4_3 }}</div>
        <div class="col box{% if page.box_4_4 %} full{% endif %}">{{ page.box_4_4 }}</div>
      </div>

    </section>

  </div>
{% endblock %}

{# Help #}
{% if page.help %}
  {% block help %}
    {{ page.help }}
  {% endblock %}
{% endif %}
