{#
/**
 * @file views-bootstrap-grid.html.twig
 * Default simple view template to display Bootstrap Grids.
 *
 *
 * - rows: Contains a nested array of rows. Each row contains an array of columns.
 * - column_type: Contains a number (default Bootstrap grid system column type).
 *
 * @ingroup views_templates
 */
#}
{%
  set classes = [
    'views-view-custom-bootstrap-grid',
  ]
%}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}
<div class="views-view-custom-bootstrap-grid">

  <div class="row">
    {% for row in rows %}
      <div {{ row.attributes }}>
        {{ row.content }}
      </div>
    {% endfor %}
  </div>

</div>
